[BASIC]

# Regular expression which should only match correct function names
function-rgx=^[_a-z][a-z0-9_]*$

# Regular expression which should only match correct method names
method-rgx=^([_a-z][a-z0-9_]*|__[a-z0-9]+__)$

[FORMAT]

indent-string='    '

[TEST MODE]

# Regex for method names when --test=y is given.
test-method-rgx=^([a-z][a-z0-9_]*|__[a-z0-9_]+__|runTest|setUp|tearDown|setUpTestCase|tearDownTestCase|setupSelf|tearDownClass|setUpClass)$

# Regex for function names when --test=y is given.
test-function-rgx=^([a-z][a-z0-9_]*|setUp|tearDown|setUpModule|tearDownModule)$

[MESSAGES CONTROL]

disable=missing-docstring,invalid-name,exec-used,bad-indentation,g-continuation-in-parens-misaligned
